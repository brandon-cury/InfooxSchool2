{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block og_title %}Connexion{% endblock %}
{% block description %}Connectez-vous à Infoox School pour accéder à vos ressources éducatives personnelles : manuels, concours, épreuves d'examens et plus. Poursuivez votre parcours éducatif avec nous !{% endblock %}
{% block og_description %}Connectez-vous à Infoox School pour accéder à vos ressources éducatives personnelles : manuels, concours, épreuves d'examens et plus. Poursuivez votre parcours éducatif avec nous !{% endblock %}

{% block body %}
    <main class="container">
        <section class="row bg-white my-3 pb-5">
            <div class="col col-10 offset-1  col-md-6 offset-md-3">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="display-4 my-4">Connectez-vous</h1>
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                    #}

                    <button class="btn btn-lg btn-outline-dark mt-3" type="submit">
                        S'identifier
                    </button>
                </form>
                <h6 class="mt-2">Mot de passe oublié ? <a href="{{ path('app_forgot_password_request') }}">Réinitialiser mon mot de passe</a></h6>
                <a class="fw-bold" href="{{ path('app_register') }}">s'inscrire</a>
            </div>
        </section>
    </main>
{% endblock %}
